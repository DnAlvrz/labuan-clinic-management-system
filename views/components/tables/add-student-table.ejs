<table class="table" id="table" >
    <thead>
      <tr class="theadRow">
        <th scope="col" class="th" data-column="id" data-order="desc">
          ID No.
        </th>
        <th scope="col" class="th" data-column="name" data-order="desc">
          Name
        </th>
        <th scope="col" class="th" data-column="grade" data-order="desc">
          Grade
        </th>
        <th scope="col" class="th" data-column="section" data-order="desc">
          Date
        </th>
        <th scope="col" class="th" data-column="action" data-order="desc">
          Action
        </th>
    </thead>
    <tbody id="myTable">
      <% if(students) {%>
        <% students.forEach(student => {%>
        <td data-label="ID No.">
          <a href="/students/record">
              <%=student.schoolId%>
          </a>
        </td>
        <td data-label="Name">
          <%=student.firstName%>
          <%=student.middleName[0]%>.
          <%=student.lastName%>
        </td>
        <td data-label="Grade">
          <%=student.grade%>
        </td>
        <td data-label="Section">
          <%=student.section%>
        </td>
        <td>
            <button 
            class="btn btn-primary btn-sm  m-1 w-100"
            data-mdb-toggle="modal" 
            data-mdb-target="#createPatientModal"
            onclick="addStudentPatient(<%=JSON.stringify(student)%>)"
            >
              <i class="fas fa-eye"></i> 
              Add
            </button>
        </td>
        <%})%>
      <%}%>
    </tbody>
  </table>