<table class="table" id="table" >
    <thead>
      <tr class="theadRow">
        <th scope="col" class="th" data-column="id" data-order="desc">
          ID No.</th>
        <th scope="col" class="th" data-column="name" data-order="desc">
          Name</th>
        <th scope="col" class="th" data-column="grade" data-order="desc">
          Grade</th>
        <th scope="col" class="th" data-column="section" data-order="desc">
            Section</th>
            <th scope="col" class="th" data-column="action" data-order="desc">
              Action</th>
    </thead>
    <tbody id="myTable">
        <% if (students) { %>
          <% students.forEach(student => { %>
          <tr>
            <td data-label="ID No."><%=  student.schoolId %></td>
            <td data-label="Name">
              <%=  student.firstName %>
              <%=  student.middleName %>
              <%=  student.lastName %>
            </td>
            <td data-label="Grade"><%=  student.grade %></td>  
            <td data-label="Section"><%=  student.section %></td>
            <td>
                <button 
                  class="btn btn-primary btn-sm  m-1"
                  data-mdb-toggle="modal" 
                  data-mdb-target="#profileModal"
                  onclick="studentProfile('<%= student._id%>')"
                > 
                  <i class="fas fa-eye"></i> View
                </button>
                
                <button 
                  class="btn btn-primary btn-sm m-1" 
                  data-mdb-toggle="modal" 
                  data-mdb-target="#studentModal"
                  onclick="updateStudent(<%= JSON.stringify(student) %>)" 
                > 
                  <i class="fas fa-edit"></i > Edit
                </button>
                <button 
                  class="btn btn-danger btn-sm  m-1"
                  data-mdb-toggle="modal" 
                  data-mdb-target="#deleteStudent"
                  onclick="deleteStudent('<%= student._id%>')"
                > 
                  <i class="fas fa-trash"></i> Delete
                </button>
            </td>
          </tr>
          <% }) %>
        <% } %>
    </tbody>
  </table>