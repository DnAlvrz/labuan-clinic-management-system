                <div class="col">
                  <div class="form-outline">
                    <input name="firstName" type="text" id="firstName" class="form-control" required/>
                    <label class="form-label" for="firstname">First name</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <input name="lastName" type="text" id="lastName" class="form-control" required/>
                    <label class="form-label" for="lastName">Last name</label>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <input name="middleName" type="text" id="middleName" class="form-control" required/>
                    <label class="form-label" for="middleName">Middle name</label>
                  </div>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col">
                  <select name="grade" id="patientGrade" class="select form-select-btn" required  >
