<div class="container-fluid">
  <div 
    class="modal modal-lg fade" 
    id="createPatientModal" 
    tabindex="-1" 
    aria-labelledby="exampleModalLabel" 
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Patient Form</h5>
          <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/patients" id="patientForm">
            <input name="patientId" type="hidden" id="patientId"/>
            <input name="studentId" type="hidden" id="studentId"/>
